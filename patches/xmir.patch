+    if (serverGeneration == 1) {
+#ifdef GLXEXT
+        GlxPushProvider(&__glXDRI2Provider);
+#endif
+        LoadExtensionList(xmir_extensions,
+                          ARRAY_SIZE(xmir_extensions), TRUE);
+    }
+
+    if (AddScreen(xmir_screen_init, argc, argv) == -1) {
+        FatalError("Couldn't add screen\n");
+    }
+}
