#!/bin/sh

set -e

THIS_PACKAGE=xserver-xorg-core
THIS_SCRIPT=postinst

#INCLUDE_SHELL_LIB#

case "$1" in
  configure)
  if dpkg --compare-versions "$2" lt-nl 2:1.5.2-1; then
    remove_conffile_commit /etc/X11/xserver/SecurityPolicy
    rmdir /etc/X11/xserver || true
  fi
esac

#DEBHELPER#

exit 0

