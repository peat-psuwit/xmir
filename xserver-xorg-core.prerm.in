#!/bin/sh

set -e

THIS_PACKAGE=xserver-xorg-core
THIS_SCRIPT=prerm

#INCLUDE_SHELL_LIB#

case "$1" in
remove|upgrade)
  if [ ! -f /usr/lib/standard-x11/standard.conf ]; then
    update-alternatives --remove gl_conf /usr/lib/standard-x11/standard.conf
  fi
  ;;
esac

